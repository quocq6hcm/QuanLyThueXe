@using QuanLyThueXe.ViewModels;
@model PhieuThuViewModel

@{
    ViewBag.Title = "MenuThemPhieuThu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    TaiKhoanViewModel nv = Session["TaiKhoan"] as TaiKhoanViewModel;
}

@using (Html.BeginForm())
{
    @Html.Hidden("MaNV", nv.MaNV)
    <div class="page-content" style="min-height:1368px">
        <!-- BEGIN PAGE HEADER-->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="index.html">Trang chủ</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Phiếu thu</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE HEADER-->
        <h3 class="page-title">
            Phiếu thu
        </h3>
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN VALIDATION STATES-->
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red" style="font-size:20px"></i>
                            <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Thêm phiếu thu</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <!-- BEGIN FORM-->
                        <div id="form_sample_1" class="form-horizontal" novalidate="novalidate">
                            <div class="form-body">
                                <div class="alert alert-danger display-hide">
                                    <button class="close" data-close="alert"></button> Bạn còn một số lỗi, vui lòng nhập chính xác!!
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Người nộp
                                        <span class="required" aria-required="true">*</span>
                                    </label>
                                    <div class="col-md-8">
                                        <input name="NguoiNop" type="text" class="form-control isEmpty" data-Name="Tên người nộp" required="">
                                        <span style="display: block;height: 6px;color:red;" class="error-message"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Địa chỉ
                                    </label>
                                    <div class="col-md-8">
                                        <textarea class="form-control" rows="3" name="DiaChi"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Lý do
                                        <span class="required" aria-required="true">*</span>
                                    </label>
                                    <div class="col-md-8">
                                        <textarea class="form-control isEmpty" data-Name="Lý do" rows="3" name="LyDo"></textarea>
                                        <span style="display: block;height: 6px;color:red;" class="error-message"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Số tiền thu
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-8">
                                        <input name="SoTienThu" type="number" class="form-control isEmpty" data-Name="Số tiền" required="">
                                        <span style="display: block;height: 6px;color:red;" class="error-message"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" class="btn green" value="Thêm phiếu thu" />
                                        <a href="/ThuChi/MenuDanhSachPhieuThu" class="btn grey-salsa btn-outline">Trở về</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END FORM-->
                    </div>
                </div>
                <!-- END VALIDATION STATES-->
            </div>
        </div>
    </div>
}


