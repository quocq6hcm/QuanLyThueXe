                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="display:none;"><span> @item.LoaiXes.STT</span></td>
                                        <td>
                                            @if (!String.IsNullOrEmpty(item.MaLoaiXe))
                                            {
                                                <span style="visibility:hidden">@item.LoaiXes.STT</span><span>@item.LoaiXes.TenLoaiXe </span>
                                            }
