@using QuanLyThueXe.ViewModels;
@model IEnumerable<ChiPhiPhatSinhViewModel>
@{
    ViewBag.Title = "MenuChiPhiPhatSinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content" style="min-height:1368px">
    <div class="row">
        @using (Html.BeginForm())
        {
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-body col-md-5 pull-right" style="padding-top:25px;float:right">
                        <div class="form-group col-md-1">
                            <a href="@Url.Action("ThemCPPS", "CaiDatChung")" class="btn green" style="margin-left:150px">
                                Thêm chi phí
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red" style="font-size:20px"></i>
                            <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Danh sách chi phí phát sinh</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                            <thead>
                                <tr>
                                    <th> Mã chi phí</th>
                                    <th> Tên chi phí </th>
                                    <th> Phí phát sinh </th>
                                    <th> Mô tả </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("ChinhSuaCPPS", "CaiDatChung", new { @MaChiPhi = item.MaChiPhi })"> @item.MaChiPhi</a>
                                        </td>
                                        <td><span>@item.TenChiPhi</span></td>
                                        <td><span>@item.PhiPhatSinh </span></td>
                                        <td><span>@item.MoTa</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        }
    </div>
</div>

