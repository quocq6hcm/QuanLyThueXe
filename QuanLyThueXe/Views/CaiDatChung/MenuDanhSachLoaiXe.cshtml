@using QuanLyThueXe.ViewModels;
@model IEnumerable<LoaiXeViewModel>

@{
    ViewBag.Title = "MenuDanhSachLoaiXe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1368px">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit bordered">
                @using (Html.BeginForm("ThemLX", "CaiDatChung"))
                {
                    <div class="portlet-body col-md-5 pull-right" style="padding-top:25px">
                        <div class="form-group col-md-8">
                            <div>
                                <input type="text" class="form-control" name="TenLoaiXe" placeholder="Nhập tên loại xe mới" required="" />
                            </div>
                        </div>
                        <div class="form-group col-md-1">
                            <button type="submit" style="background-color:white; border:none">
                                <i class="fa-2x fa fa-plus" id="AddLoaiKH"> </i>
                            </button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red" style="font-size:20px"></i>
                        <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Danh sách loại xe</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                            <tr>
                                <th> Mã Loại Xe </th>
                                <th> Tên Loại Xe </th>
                                <th> Trạng Thái </th>
                                <th> Chỉnh sửa </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td><span>@item.MaLoaiXe</span></td>
                                    <td><span> @item.TenLoaiXe </span></td>
                                    <td>
                                        <span>
                                            @if (@item.Dang == true)
                                            {
                                                <span style="margin-left:80px"><input type="checkbox" name="Dang" value="true" checked readonly /></span>
                                            }
                                            else
                                            {
                                                <span style="margin-left:80px"><input type="checkbox" name="Dang" value="false" readonly /></span>
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ChinhSuaLoaiXe","CaiDatChung",new {MaLoaiXe = @item.MaLoaiXe })"> Chỉnh sửa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>

