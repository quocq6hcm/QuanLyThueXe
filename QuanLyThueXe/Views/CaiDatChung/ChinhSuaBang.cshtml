@using QuanLyThueXe.ViewModels;
@model IEnumerable<LoaiBangViewModel>

@{
    ViewBag.Title = "ChinhSuaBang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    LoaiBangViewModel lb = ViewBag.model as LoaiBangViewModel;
}

<div class="page-content" style="min-height:1368px">
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red" style="font-size:20px"></i>
                        <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Danh sách loại bằng</span>
                    </div>
                </div>
                <div class="portlet-body">

                    @using (Html.BeginForm("ChinhSuaBang", "CaiDatChung"))
                    {
                        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                            <thead>
                                <tr>
                                    <th> Mã bằng </th>
                                    <th> Tên bằng </th>
                                    <th> Mô tả </th>
                                    <th> Chỉnh sửa </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (@item.MaBang == @lb.MaBang)
                                    {
                                        <tr>

                                            @Html.Hidden("MaBang", item.MaBang)
                                            <td><span>@item.MaBang</span></td>
                                            <td><input type="text" name="TenBang" class="form-control input-small" value="@item.TenBang" required="" maxlength="100" /></td>
                                            <td><input type="text" name="MoTa" class="form-control input-small" value="@item.MoTa" maxlength="100" /></td>
                                            <td>
                                                <input type="submit" value="Lưu" id="Luu" /> ||
                                                <a href="~/CaiDatChung/MenuDanhSachLoaiBang" style="color:red">Trở về</a>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td><span>@item.MaBang</span></td>
                                            <td><span> @item.TenBang </span></td>
                                            <td><span> @item.MoTa </span></td>
                                            <td>
                                                <a href="@Url.Action("ChinhSuaBang","CaiDatChung",new {@MaBang = item.MaBang })"> Chỉnh sửa</a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    }
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>
<style>
    #Luu {
        border: none;
        background: none;
        color: blue;
    }
</style>



