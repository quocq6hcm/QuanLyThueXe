@using QuanLyThueXe.ViewModels;
@model BangGiaViewModel

@{
    ViewBag.Title = "ChiTietGia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1368px">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN VALIDATION STATES-->
            <div class="portlet light portlet-fit portlet-form bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red" style="font-size:20px"></i>
                        <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Thông tin chi tiết bảng giá</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <div id="form_sample_1" class="form-horizontal" novalidate="novalidate">
                        <div class="form-body">
                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button> Bạn còn một số lỗi, vui lòng nhập chính xác!!
                            </div>
                            @*<div class="alert alert-success display-hide">
                                    <button class="close" data-close="alert"></button> Your form validation is successful!
                                </div>*@
                            @*<div class="form-group">
                                <label class="control-label col-md-2">
                                    Mã bảng giá
                                    <span class="required" aria-required="true"> </span>
                                </label>
                                <div class="col-md-8">
                                    <input name="MaBangGia" type="text" class="form-control" required="" value="@Model.MaBangGia" readonly>
                                </div>
                            </div>*@
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Khách hàng
                                    <span class="required" aria-required="true"></span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" value="@Model.KhachHangs.TenKH" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Lộ trình
                                    <span class="required" aria-required="true"></span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" value="@Model.LoTrinhs.TenLoTrinh" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Loại xe
                                    <span class="required" aria-required="true"></span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" value="@Model.LoaiXes.TenLoaiXe" class="form-control" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Thời gian
                                </label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="@Model.ThoiGian" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Số KM
                                    <span class="required" aria-required="true"></span>
                                </label>
                                <div class="col-md-8">
                                    <input type="number" class="form-control" value="@Model.SoKM" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">
                                    Giá
                                    <span class="required" aria-required="true"></span>
                                </label>
                                <div class="col-md-8">
                                    <input name="Gia" class="form-control" value="@Model.Gia.Value.ToString("#,##")" readonly>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <a href="@Url.Action("ChinhsuaGia", "BangGia", new { @id = @Model.MaBangGia })" class="btn green"> Cập nhật</a>
                                        <a href="/BangGia/MenuDanhSachBangGia" class="btn grey-salsa btn-outline">Trở lại</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END FORM-->
                </div>
            </div>
            <!-- END VALIDATION STATES-->
        </div>
    </div>
</div>




