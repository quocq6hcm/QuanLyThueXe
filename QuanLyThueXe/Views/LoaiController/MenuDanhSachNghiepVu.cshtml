@using QuanLyThueXe.ViewModels;
@model IEnumerable<LoaiControllerViewModel>
@{
            ViewBag.Title = "MenuDanhSachNghiepVu";
            Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content" style="min-height:1368px">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="index.html">Trang chủ</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span id="id_trang">Nghiệp vụ</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <h3 class="page-title">
        Nghiệp vụ 
    </h3>
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red" style="font-size:20px"></i>
                        <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Danh sách nghiệp vụ</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <a href="@Url.Action("CapNhat", "LoaiController")" class="btn green">
                                        Cập nhật
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">

                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                            <tr>
                                <th> Mã nghiệp vụ </th>
                                <th> Tên nghiệp vụ </th>
                                <th> Icon </th>
                                <th> Chỉnh sửa </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                        <td><span>@item.MaController</span></td>
                                        <td><span> @item.TenController </span></td>
                                        <td><span>@item.Icon </span></td>
                                    <td>
                                            <a href="@Url.Action("ChinhSuaNghiepVu","LoaiController",new {@MaController = item.MaController })"> Chỉnh sửa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @*Chức năng phân trang*@
                @*<div style="text-align:center" class="dlink">
                    @*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("MenuDanhSachNghiepVu", new { page = page, @class = "btn btn-default" }))
                </div>*@
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>
