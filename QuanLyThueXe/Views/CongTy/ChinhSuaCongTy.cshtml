@using QuanLyThueXe.ViewModels;
@model CongTiesViewModel

@{
    ViewBag.Title = "ChinhSuaCongTy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.Hidden("MaCongTy", @Model.MaCongTy)
    <div class="page-content" style="min-height:1368px">
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN VALIDATION STATES-->
                <div class="portlet light portlet-fit portlet-form bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red" style="font-size:20px"></i>
                            <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Chỉnh sửa thông tin công ty</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <!-- BEGIN FORM-->
                        <div id="form_sample_1" class="form-horizontal" novalidate="novalidate">
                            <div class="form-body">
                                <div class="alert alert-danger display-hide">
                                    <button class="close" data-close="alert"></button> Bạn còn một số lỗi, vui lòng nhập chính xác!!
                                </div>
                                @*<div class="alert alert-success display-hide">
                                        <button class="close" data-close="alert"></button> Your form validation is successful!
                                    </div>*@
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Tên công ty
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="text" name="TenCongTy" data-required="1" class="form-control isEmpty" required="" value="@Model.TenCongTy">
                                        <span style="display: block;height: 6px;color:red;" class="error-message"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Người Liên Hệ
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="text" name="NguoiLienHe" data-required="1" class="form-control isEmpty" value="@Model.NguoiLienHe">
                                        <span style="display: block;height: 6px;color:red;" class="error-message"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Địa chỉ
                                        <span class="required" aria-required="true"></span>
                                    </label>
                                    <div class="col-md-8">
                                        <input type="text" name="DiaChi" data-required="1" class="form-control" value="@Model.DiaChi">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Số điện thoại
                                        <span class="required" aria-required="true"> * </span>
                                    </label>
                                    <div class="col-md-4">
                                        <input name="SDT" type="text" class="form-control isEmpty" required="" value="@Model.SDT">
                                        <span style="display: block;height: 6px;color:red;" class="error-message"></span>
                                    </div>
                                    <label class="control-label col-md-2">
                                        Fax
                                        <span class="required" aria-required="true"></span>
                                    </label>
                                    <div class="col-md-2">
                                        <input name="Fax" type="text" class="form-control" value="@Model.Fax">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Email
                                        <span class="required" aria-required="true"></span>
                                    </label>
                                    <div class="col-md-8">
                                        <input name="Email" type="text" class="form-control" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">
                                        Ghi chú
                                        <span class="required" aria-required="true"></span>
                                    </label>
                                    <div class="col-md-8">
                                        <textarea name="GhiChu" class="form-control" rows="3">@Model.GhiChu</textarea>
                                    </div>
                                </div>
                                @*<div class="form-group">
                                    <label class="control-label col-md-2">
                                        Đăng
                                        <span class="required" aria-required="true"></span>
                                    </label>
                                    <div class="col-md-8">
                                        @if (@Model.Dang == true)
                                        {
                                            <p style="padding-top:8px">
                                                <span><input type="checkbox" name="Dang" value="true" checked /></span>

                                            </p>
                                        }
                                        else
                                        {
                                            <p style="padding-top:8px">
                                                <span><input type="checkbox" name="Dang" value="false" /></span>
                                            </p>
                                        }
                                    </div>
                                </div>*@
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <input type="submit" class="btn green" value="Cập nhật" />
                                        <a href="/CongTy/MenuDanhSachCongTy" class="btn grey-salsa btn-outline">Trở lại</a>
                                        <button class="btn red">
                                            <a href="/CongTy/XoaCty?MaCongTy=@Model.MaCongTy" style="color:white">Xóa</a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END FORM-->
                    </div>
                </div>
                <!-- END VALIDATION STATES-->
            </div>
        </div>
    </div>
}

<script>
    $("input[type='checkbox']").click(function () {
        $(this).change(function () {
            if ($(this).is(':checked')) {
                $(this).val('true');
            }
            else {
                $(this).val('false');
            }
        })
    })
</script>