@using QuanLyThueXe.ViewModels;
@model IEnumerable<CongTiesViewModel>

@{
    ViewBag.Title = "MenuDSChinhSuaCongTy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1368px">
    <div class="row">
        @using (Html.BeginForm())
        {
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red" style="font-size:20px"></i>
                            <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Danh sách công ty</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                            <thead>
                                <tr>
                                    <th> Mã công ty</th>
                                    <th> Tên công ty </th>
                                    <th> Số điện thoại </th>
                                    <th> Người Liên Hệ </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("ChinhSuaCongTy","CongTy",new {@MaCT = item.MaCongTy })"> @item.MaCongTy</a>
                                        </td>
                                        <td><span> @item.TenCongTy </span></td>
                                        <td><span>@item.SDT </span></td>
                                        <td><span>@item.NguoiLienHe </span></td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        }
    </div>
</div>

