@using QuanLyThueXe.ViewModels;
@model CongTiesViewModel
@{
    ViewBag.Title = "ThongTinChiTietCty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:956px">
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PROFILE SIDEBAR -->
            <div class="profile-sidebar">
                <!-- PORTLET MAIN -->
                <div class="portlet light profile-sidebar-portlet ">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="~/Content/Template/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">@Model.TenCongTy</div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        <button type="button" class="btn btn-circle green btn-sm">Gửi Email</button>
                    </div>
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li>
                                <a>
                                    <i class="fa fa-mobile"></i> @Model.SDT
                                </a>
                            </li>
                            <li>
                                <a>
                                    <i class="fa fa-envelope-o"></i> @Model.Email
                                </a>
                            </li>
                            <li>
                                <a>
                                    <i class="icon-home"></i> @Model.DiaChi
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                    <!-- END MENU -->
                </div>
                <!-- END PORTLET MAIN -->
            </div>
            <!-- END BEGIN PROFILE SIDEBAR -->
            <!-- BEGIN PROFILE CONTENT -->
            <div class="profile-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light ">
                            <div class="portlet-title tabbable-line">
                                <div class="caption caption-md">
                                    <i class="icon-globe theme-font hide"></i>
                                    <span class="caption-subject font-blue-madison bold uppercase">Thông tin công ty</span>
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="tab-content">
                                    <!-- PERSONAL INFO TAB -->
                                    <div class="tab-pane active" id="tab_1_1">
                                        <form role="form" action="#">
                                            @*<div class="form-group">
                                                <label class="control-label">Mã công ty</label>
                                                <input type="text" value="@Model.MaCongTy" class="form-control" readonly>
                                            </div>*@
                                            <div class="form-group">
                                                <label class="control-label">Tên công ty</label>
                                                <input type="text" value="@Model.TenCongTy" class="form-control" readonly>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Người Liên Hệ</label>
                                                <input type="text" value="@Model.NguoiLienHe" class="form-control" readonly>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Fax</label>
                                                <input type="text" value="@Model.Fax" class="form-control" readonly>
                                            </div>
                                            
                                            <div class="form-group">
                                                <label class="control-label">Ghi chú</label>
                                                <textarea class="form-control" rows="3" readonly>@Model.GhiChu</textarea>
                                            </div>
                                            @*<div class="form-group">
                                                <label class="control-label">Đăng</label>
                                                @if (@Model.Dang == true)
                                                {
                                                    <p style="margin-top:8px;">
                                                        <span><input type="checkbox" name="Dang" value="true" checked readonly /></span>
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p style="margin-top:8px;">
                                                        <span><input type="checkbox" name="Dang" value="false" readonly /></span>
                                                    </p>
                                                }
                                            </div>*@
                                            <div class="margiv-top-10">
                                                <a href="@Url.Action("ChinhSuaCongTy", "CongTy", new { @MaCT = @Model.MaCongTy })" class="btn green"> Cập nhật</a>
                                                <button class="btn red">
                                                    <a href="/CongTy/XoaCty?MaCongTy=@Model.MaCongTy" style="color:white">Xóa</a>
                                                </button>
                                                <a href="/CongTy/MenuDanhSachCongTy" class="btn grey-salsa btn-outline">Trở về</a>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- END PERSONAL INFO TAB -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PROFILE CONTENT -->
        </div>
    </div>
</div>


