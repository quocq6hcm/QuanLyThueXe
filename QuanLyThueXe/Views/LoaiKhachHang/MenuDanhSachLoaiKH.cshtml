@using QuanLyThueXe.ViewModels;
@model IEnumerable<LoaiKhachHangViewModel>
@{
    ViewBag.Title = "MenuDanhSachLoaiKH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content" style="min-height:1368px">
    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="index.html">Trang chủ</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Loại Khách Hàng</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <h3 class="page-title">
        Loại Khách Hàng
    </h3>
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light portlet-fit bordered">
                @using (Html.BeginForm("ThemLKH", "LoaiKhachHang"))
                {
                    <div class="portlet-body col-md-5 pull-right" style="padding-top:25px;float:right">
                        <div class="form-group col-md-8">
                            <div>
                                <input type="text" class="form-control" name="TenLoaiKH" placeholder="Nhập tên loại khách hàng mới" required="" />
                            </div>
                        </div>
                        <div class="form-group col-md-1">
                            <button type="submit" style="background-color:white; border:none">
                                <i id="AddLoaiKH" class="fa-2x fa fa-plus" > </i>
                            </button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-settings font-red" style="font-size:20px"></i>
                        <span class="caption-subject font-red sbold uppercase" style="font-size:25px">Danh sách loại khách hàng</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                        <thead>
                            <tr>
                                <th> Mã Loại Khách Hàng </th>
                                <th> Tên Loại Khách Hàng </th>
                                <th> Chỉnh sửa </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span>@item.MaLoaiKH</span></td>
                                    <td><span> @item.TenLoaiKH </span></td>
                                    <td>
                                        <a href="@Url.Action("ChinhSuaLoaiKH","LoaiKhachHang",new {@MaLoaiKH = item.MaLoaiKH })"> Chỉnh sửa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>

